<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.RakeActivity"
    android:weightSum="1"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="30dp"
        android:layout_weight="0.09"
        android:background="@color/colorMint"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/id1"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_weight="0.15"

            android:background="@color/colorMint"
            android:onClick="onClick"
            android:text="상품추가"
            android:gravity="center"
            android:textColor="@color/colorDarkGray"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id2"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_weight="0.15"
            android:background="@color/colorMint"
            android:onClick="onClick"
            android:gravity="center"
            android:text="내상품"
            android:textColor="@color/colorDarkGray"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id3"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_weight="0.15"
            android:background="@color/colorMint"
            android:gravity="center"
            android:onClick="onClick"
            android:text="랭킹"
            android:textColor="@color/colorDarkGray"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="left"
        android:layout_weight="0.09"
        android:background="@color/colorGray"
        android:gravity="center"
        android:text="남성화장품"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="394dp"
        android:layout_height="0dp"
        android:layout_weight="0.09"
        android:layout_marginTop="5dp"
        android:text="1. 이니스프리 포레스트 올인원 에센스 "
        android:layout_marginLeft="5dp"
        android:textAllCaps="false"
        android:textSize="18sp"
     />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.09"
        android:text="2. 아이오페 맨 선 프로텍터"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.09"
        android:text="3. 비오템 옴므 스킨"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.09"
        android:text="여성화장품"
        android:gravity="center"
        android:background="@color/colorGray"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.09"
        android:text="1. 아리따움 모노아아즈"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
         />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.09"
        android:text="2. 페리페라 잉크 더 벨벳"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
         />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.09"
        android:text="3. MAC 루비우"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
         />
</LinearLayout>


